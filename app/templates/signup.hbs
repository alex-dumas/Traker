<div class="large-4 columns text-center">
    <label><b>Email</b></label>
    {{input type="text" value=email placeholder="Enter your email address."}}
    <label><b>Full Name</b></label>
    {{#if nameTaken}}
      <div class="error">
        {{input type="text" value=name class="error" placeholder="Enter your full name"}}
        <small class="error">That name has been taken.</small>
      </div>
    {{else}}
      {{input type="text" value=name placeholder="Enter your full name"}}
    {{/if}}
    <label><b>Password</b></label>
    <div class="wrap-password">
      {{input type="password" class="password" value=password placeholder="Enter your password."}}
    </div>
    {{toggle-switch model=this}} <p class="ios-switch-text">Remember Me</p>
    <button class='button success' {{action 'submit'}}>Sign Up &raquo;</button>
    {{#if formsNotFilled}}
      <div data-alert="" class="alert-box alert round">
        Please fill out all the input fields.<a href="" class="close">Ã—</a>
      </div>
    {{/if}}
</div>
